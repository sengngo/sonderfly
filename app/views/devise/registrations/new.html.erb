<div class="form_wrapper">
  <%= render 'layouts/nav_white' %>
  <div class="form vertical-align">
    <div id="logo">
          <%= link_to image_tag("sonderfly_logo_white.png", size: '185x50'), root_path %>
    </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
    	<%= f.input :first_name, placeholder: 'First Name', required: true, autofocus: true, label: false %>

    	<%= f.input :last_name, placeholder: 'Last Name', required: true, label: false %>

      <%= f.input :email, placeholder: 'Email, i.e. JoeDoe@gmail.com', required: true, label: false %>

      <%= f.input :password, placeholder: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false  %>

      <%= f.input :password_confirmation, placeholder: 'Confirm password',  required: true, label: false  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
      <p class="white"> By creating an account, I accept <%= link_to "Sonderfly's Terms of Service", "#" %>.</p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
