  <div id='home_background'>
    <header class='cf'>
      <div class="wrapper_wide">

      </div>

    </header>
  
    <div class="wrapper_skinny">
      <h1>Together, <br /> let's discover the world!</h1>
        <p class="welcome">
        For those living the traveler's mindset, Sonderfly is a platform to connect people through authentic conversations and provide the space to share stories, insights, and support. Join to tell your story and build a community of travelers.
      </p>
      <%= link_to "Get Started", new_user_registration_path, class: "button button_highlight" %>
      or <%= link_to "EXPLORE", posts_path %>
    </div>
  </div>


 <% if user_signed_in? %>
  <p id="into">
    Hello <%= current_user.full_name %>
  </p>
  <br />
  <span>
    Share your inspiration and see what's inspiring others.
  </span>

  <% else %>

  <p id="intro">
    What's your muse?
  </p>
  <span>
    Share your inspiration and see what's inspiring others.
  </span>
<% end %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= image_tag post.cover_photo, class: 'post' %>
    <div class="post_content">
      <h2><%= link_to post.title, post %></h2>
      <div class="data clearfix">
        <p class="username">
          Written by <%= post.user.full_name %>
        </p>
      <p class="buttons">
        <span>
          <i>
          <%= post.comments.count %> 
        </i>
        </span>

    </div>
  <% end %>
</div>


