<% if current_user && current_user == comment.user %>
				<%= button_to 'Edit', edit_post_comment_path(@post, comment),
				 :class => 'button' %>
	  		<%= button_to 'Delete', post_comment_path(@post, comment),
	                  method: :delete,
	                  :class => "button",
	                  data: {confirm: "Are you sure? This cannot be undone."}  %>
<% end %>