<style media="screen">
  .cover_photo { background-image: url(<%= @post.cover_photo %>); }
</style>

    <div class="cover_photo">
      <div class="post_form">
        <%= simple_form_for @post do |f| %>
            <%= f.input :cover_photo, label: false %>
            <%= f.input :title, placeholder: 'Title of your story', :class => 'post_title', label: false %>
            <%= f.input :intro, placeholder: 'Short Intro', :class => 'post_intro', label: false %>
    
      </div>
    </div>

    <div class="post_body_edit">
            <%= f.input :body, placeholder: 'Tell your story', :class => 'post_body', label: false %>

            <%= f.button :submit %>
        <% end %>
    </div>
</div>
<script>
AlloyEditor.editable('post_body');

var toolbars = {
    add: {
        buttons: ['image'],
        tabIndex: 2
    },
    styles: {
        selections: AlloyEditor.Selections,
        tabIndex: 1
    }
};
</script>