<%= simple_form_for @post do |f| %>
	<%= f.input :cover_photo, required: true %>
	<%= f.input :title, placeholder: 'Title of your story', :class => 'post_title', label: false, required: true %>
	<%= f.input :intro, placeholder: 'Short Intro', :class => 'post_intro', label: false %>
    <p>By <%= current_user.full_name %>
	<%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'In-Line'} }, placeholder: 'Tell your story', :class => 'post_body', label: false, required: true, input_html: { contenteditable: true } %>

	<%= f.button :submit %>
<% end %>

<script>
AlloyEditor.editable('post_body');

var toolbars = {
    add: {
        buttons: ['image', 'camera', 'hline', 'table'],
        tabIndex: 2
    },
    styles: {
        selections: AlloyEditor.Selections,
        tabIndex: 1
    }
};


</script>