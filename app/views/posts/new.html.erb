<style media="screen">
  .cover_photo { background-image: url(<%= @post.cover_photo %>); }
</style>

  <div class="cover_photo">
    <%= render 'layouts/nav_white' %>
    <div class="post_header vertical-align">
        <%= simple_form_for @post do |f| %>
            <%= f.input :cover_photo, label: false %>
            <%= f.input :title, placeholder: 'Title of your story', :id => 'post_title', label: false %>
            <%= f.input :intro, placeholder: 'Short Intro', :id => 'post_intro', label: false %>
       <h2>By <%= current_user.full_name %></h2>
    </div><!-- post_header -->
  </div><!-- cover photo -->
    <%= f.input :body, placeholder: 'Tell your story', label: false %>
  <div class="center">
    <%= f.submit "Create Post", class: "button-color" %>
    <% end %>
  </div>

<script>
AlloyEditor.editable('post_body');

var toolbars = {
    add: {
        buttons: ['image'],
        tabIndex: 2
    },
    styles: {
        selections: AlloyEditor.Selections,
        tabIndex: 1
    }
};
</script>